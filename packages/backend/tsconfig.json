{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "express",
      "jest"
    ],
    "paths": {
      "@types/*": [
        "../../types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../../types/**/*",
    "../types",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}